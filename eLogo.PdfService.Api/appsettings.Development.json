{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "eLogo.PdfService": "Debug",
      "System": "Information"
    }
  },

  // Swagger - Development'ta açık
  "SwaggerEnabled": true,

  // MongoDB - Local development
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "PdfProvider_Dev",
    "LogConnectionString": "mongodb://localhost:27017",
    "LogLevel": 0
  },

  // IronPdf - Development settings with more debugging
  "IronPdf": {
    "EnableDebug": true,
    "LogLevel": 0,
    "RenderTimeout": 300,
    "RenderTaskTimeout": 300
  },

  // Wkhtml - Local service
  "WkhtmlToPdf": {
    "ServiceUrl": "http://localhost:8000/api/Pdf/ConvertHtmlToPdf"
  },

  // PDF Service - Development settings
  "PdfService": {
    "HtmlTraceEnable": true,
    "HtmlPath": "C:\\HtmlTemp",
    "AuthenticationEnable": false,
    "TransactionLogCounterEnable": true
  },

  // Fluentd - Local or disabled
  "Fluentd": {
    "HostName": "localhost",
    "Port": 24224,
    "SourceName": "PdfService-Dev",
    "ProjectCode": "PDFSERVICE"
  }
}

